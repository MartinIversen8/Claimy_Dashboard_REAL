        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Claimy_Dashboard.View"
        mc:Ignorable="d"
        Title="Full_Case_Ticket_View" Height="450" Width="800">
    <Grid Background="LightGray">
        <Grid Height="70" VerticalAlignment="Top" Background="#FF537DA6">
            <TextBlock Text="Full Case/Ticket View" Foreground="White" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Grid Margin="0,71,0,0">
            <ListView x:Name="fullView" HorizontalAlignment="Left" VerticalAlignment="Top" Width="800" Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header=""></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>    
        </Grid>
        

    </Grid>
</Window>
