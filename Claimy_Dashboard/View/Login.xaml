<Window x:Class="Claimy_Dashboard.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Claimy_Dashboard.View"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" > 

    <Grid Background="LightGray">
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="124" Width="488" Margin="3,95,1,350">
            <TextBox x:Name="LoginUsername" HorizontalAlignment="Center" VerticalAlignment="Top" Width="230" Height="30" Background="White" materialDesign:HintAssist.Hint="Username (E-mail)"/>          
            <PasswordBox x:Name="LoginPassword" HorizontalAlignment="Center" VerticalAlignment="Center" Width="230" Height="30" Background="White" materialDesign:HintAssist.Hint="Password"/>
        </Grid>
        <Button x:Name="loginButton" Content="Login" Width="100" Height="30" Background="#FF537DA6" HorizontalAlignment="Center" Click="TryLogin"/>
    </Grid>
</Window>
